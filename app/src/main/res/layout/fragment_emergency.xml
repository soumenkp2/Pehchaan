<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF3F9"
    tools:context=".emergency">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descript"
                android:layout_below="@+id/head"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lovers_quarrel"
                android:gravity="center"
                android:text="Your book of Identities"
                android:textColor="#87013D"
                android:textSize="29sp" />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@id/descript"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/linear"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:src="@drawable/women"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/emergencyicon"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:src="@drawable/women"/>











            </LinearLayout>

            <Button
                android:layout_width="190dp"
                android:id="@+id/sendbtn"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/appeal_back"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_semibold"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:layout_below="@id/linear"
                android:textAllCaps="false"
                android:text="Send Emergency Appeal"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardcontacts"
                android:layout_height="400dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="#FDCCE3"
                android:layout_below="@id/sendbtn">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/to"
                            android:layout_weight="1.3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/marcellus_sc"
                            android:gravity="center"
                            android:text="Emergency\n Contacts"
                            android:textColor="#710A39"
                            android:textSize="20sp" />




                    </LinearLayout>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:background="#830A41"
                        android:layout_weight="1.1899"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/cont"
                            android:layout_weight="1.6"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Emergency 1"
                            android:id="@+id/edit1"
                            android:gravity="center"
                            android:textColor="#710A39"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txt1"
                            android:padding="20dp"
                            android:layout_weight="1.7"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/cont"
                            android:layout_weight="1.6"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Emergency 2"
                            android:gravity="center"
                            android:id="@+id/edit2"
                            android:textColor="#710A39"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txt2"
                            android:padding="20dp"
                            android:layout_weight="1.7"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cont"
                            android:padding="10dp"
                            android:layout_weight="1.6"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Emergency 3"
                            android:gravity="center"
                            android:id="@+id/edit3"
                            android:textColor="#710A39"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:id="@+id/txt3"
                            android:layout_weight="1.7"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cont"
                            android:padding="10dp"
                            android:layout_weight="1.6"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Emergency 4"
                            android:gravity="center"
                            android:id="@+id/edit4"
                            android:textColor="#710A39"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:id="@+id/txt4"
                            android:layout_weight="1.7"/>


                    </LinearLayout>














                </LinearLayout>




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:layout_height="400dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="#FFCFE4"
                android:layout_below="@+id/cardcontacts">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="505dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/to" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/marcellus_sc"
                        android:gravity="center"
                        android:text="Customised\n Message"
                        android:textColor="#710A39"
                        android:textSize="20sp" />




                </LinearLayout>

                <TextView
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:background="#830A41"
                    android:layout_weight="2.47"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Write your message"
                        android:id="@+id/editmsg"
                        android:gravity="center"
                        android:textColor="#830A41"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtmsg"
                        android:src="@drawable/light"
                        android:padding="30dp"
                        android:layout_weight="3.6"/>


                </LinearLayout>


                </LinearLayout>







            </androidx.cardview.widget.CardView>















        </RelativeLayout>










    </ScrollView>










</FrameLayout>